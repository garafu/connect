<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include("./_share/meta.ejs") %>
  <%- include("./_share/stylesheets.ejs") %>
  <title>Ping</title>
</head>

<body>
  <div class="container-fluid h-100">
    <div class="row h-100">
      <%- include("./_share/sidemenu.ejs") %>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Ping</h1>
        </div>
        <div class="mt-5">
          <form class="row g-3">
            <div class="mb-3 row">
              <label for="host" class="col-sm-2 col-form-label">host</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="host" name="host" />
              </div>
            </div>
            <div class="mb-3 row">
              <div class="col-sm-2"></div>
              <div class="col-sm-10">
                <input type="button" value="send" class="btn btn-primary" id="btnSend" />
              </div>
            </div>
          </form>
      
          <pre id="result" class="bg-light py-1 px-3 border rounded-3">&nbsp;</pre>
        </div>
      </main>
    </div>
  </div>

  <%- include("./_share/scripts.ejs") %>
  <script src="/public/scripts/ping.js"></script>
</body>

</html>